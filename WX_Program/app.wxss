/**app.wxss**/
/* 全局重置样式 */
page {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: #333;
  background: #f5f5f5;
}

view, text, button, input, textarea, image, canvas, scroll-view {
  box-sizing: border-box;
}

/* 全局容器样式 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 全局按钮样式 */
button {
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-family: inherit;
}

button::after {
  border: none;
}

button[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 全局卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4facfe, #00f2fe, #4facfe);
  background-size: 200% 100%;
  animation: cardGlow 3s ease-in-out infinite;
}

@keyframes cardGlow {
  0%, 100% { background-position: 200% 0; }
  50% { background-position: -200% 0; }
}

/* 全局文本样式 */
.text-primary {
  color: #1976d2;
  font-weight: 600;
}

.text-secondary {
  color: #666;
  font-weight: 400;
}

.text-success {
  color: #4caf50;
  font-weight: 600;
}

.text-warning {
  color: #ff9800;
  font-weight: 600;
}

.text-error {
  color: #f44336;
  font-weight: 600;
}

/* 全局间距类 */
.mt-small { margin-top: 16rpx; }
.mt-medium { margin-top: 32rpx; }
.mt-large { margin-top: 48rpx; }

.mb-small { margin-bottom: 16rpx; }
.mb-medium { margin-bottom: 32rpx; }
.mb-large { margin-bottom: 48rpx; }

.p-small { padding: 16rpx; }
.p-medium { padding: 32rpx; }
.p-large { padding: 48rpx; }

/* 全局阴影类 */
.shadow-small {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.shadow-medium {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.shadow-large {
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

/* 全局圆角类 */
.rounded-small { border-radius: 8rpx; }
.rounded-medium { border-radius: 16rpx; }
.rounded-large { border-radius: 24rpx; }
.rounded-full { border-radius: 50%; }

/* 全局渐变背景类 */
.bg-gradient-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.bg-gradient-secondary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.bg-gradient-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
}

.bg-gradient-warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

/* 全局动画类 */
.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.animate-bounce {
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(-25%);
    animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
  }
  50% {
    transform: none;
    animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
  }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 全局加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #4facfe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 全局响应式 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx;
  }

  .card {
    padding: 30rpx;
    border-radius: 20rpx;
  }
}

/* 全局滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* 全局图标样式 */
.icon {
  display: inline-block;
  font-style: normal;
  vertical-align: baseline;
  text-align: center;
  text-transform: none;
  line-height: 1;
  text-rendering: optimizeLegibility;
}

.icon-small { font-size: 32rpx; }
.icon-medium { font-size: 48rpx; }
.icon-large { font-size: 64rpx; }
.icon-xl { font-size: 80rpx; }
