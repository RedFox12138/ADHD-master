/* 离线实验校准页面样式 */

.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部状态栏 */
.status-bar {
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-info {
  display: flex;
  align-items: center;
}

.device-status {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.device-status.connected {
  color: #52c41a;
}

.device-status.disconnected {
  color: #ff4d4f;
}

.device-name {
  font-size: 28rpx;
  color: #333;
}

.experiment-info {
  display: flex;
  align-items: center;
}

.phase-text {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* 主内容区 */
.main-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

/* 说明面板 */
.instruction-panel {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.description {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.description text {
  font-size: 28rpx;
  color: #666;
}

.highlight {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.mt {
  margin-top: 20rpx;
  color: #333;
  font-weight: 500;
}

/* 实验流程 */
.experiment-flow {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.flow-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.flow-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.flow-item:last-child {
  border-bottom: none;
}

.flow-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.flow-icon.prepare {
  background: linear-gradient(135deg, #ffd93d 0%, #ff9800 100%);
}

.flow-icon.rest {
  background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
}

.flow-icon.break {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.flow-icon.attention {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
}

.flow-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.flow-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.flow-time {
  font-size: 24rpx;
  color: #999;
}

.flow-desc {
  font-size: 24rpx;
  color: #666;
}

/* 实验要求 */
.requirement {
  background: #fff9e6;
  border-left: 4rpx solid #faad14;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.requirement text {
  font-size: 26rpx;
  color: #666;
}

.requirement-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333 !important;
}

/* 开始按钮 */
.start-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.4);
}

.start-btn .btn-icon {
  font-size: 48rpx;
}

.start-btn .btn-text {
  font-size: 32rpx;
  font-weight: bold;
}

.start-btn[disabled] {
  background: #d9d9d9;
  box-shadow: none;
}

/* 实验进行中容器 */
.experiment-view {
  width: 100%;
  height: 100%;
}

.phase-container {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  min-height: 1000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.phase-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.countdown {
  font-size: 120rpx;
  font-weight: bold;
  color: #667eea;
  margin: 40rpx 0;
}

.phase-instruction {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.attention-warning {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-top: 20rpx;
  font-weight: 500;
}

/* 静息阶段 */
.rest-phase {
  background: #000;
  padding: 0;
  min-height: 1200rpx;
}

.rest-screen {
  width: 100%;
  min-height: 1200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.green-cross {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.cross-horizontal,
.cross-vertical {
  position: absolute;
  background: #00ff00;
}

.cross-horizontal {
  width: 200rpx;
  height: 20rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.cross-vertical {
  width: 20rpx;
  height: 200rpx;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}

.phase-timer {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 36rpx;
  color: #00ff00;
  font-weight: bold;
}

/* 静息阶段专用定时器 - 显示在右下角边缘 */
.phase-timer-rest {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  font-size: 24rpx;
  color: rgba(0, 255, 0, 0.5);
  font-weight: normal;
}

.phase-tip {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 28rpx;
  color: #00ff00;
}

/* 静息阶段专用提示文字 */
.phase-tip-rest {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 28rpx;
  color: #00ff00;
}

/* 躲避游戏 */
.dodge-game {
  padding: 0;
  position: relative;
  background: #1a1a2e;
  min-height: 1200rpx;
}

.game-stats-top {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  color: white;
  font-size: 32rpx;
  z-index: 100;
  font-weight: bold;
}

.attention-timer {
  color: #52c41a;
  font-size: 36rpx;
}

.game-area {
  width: 100%;
  height: 1100rpx;
  position: relative;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  overflow: hidden;
}

.player {
  position: absolute;
  bottom: 80rpx;
  width: 60rpx;
  height: 60rpx;
  background: #52c41a;
  border-radius: 50%;
  transform: translateX(-30rpx);
  box-shadow: 0 0 20rpx rgba(82, 196, 26, 0.8);
  z-index: 10;
}

.obstacle {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  background: #ff4d4f;
  border-radius: 10rpx;
  transform: translateX(-25rpx);
  box-shadow: 0 0 15rpx rgba(255, 77, 79, 0.6);
}

.game-controls {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 0 80rpx;
  z-index: 100;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  color: #667eea;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
  border: none;
  padding: 0;
}

.control-btn::after {
  border: none;
}

.control-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.95);
}

/* 完成界面 */.control-btn:active {
  background: rgba(255, 255, 255, 0.5);
}

.game-stats {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 完成界面 */
.complete-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.trial-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin: 30rpx 0 50rpx;
}

.trial-stats text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.action-btn .btn-icon {
  font-size: 40rpx;
}

.action-btn .btn-text {
  font-size: 26rpx;
  font-weight: 600;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* 数据收集指示器 */
.data-indicator {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff4d4f;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}
