/* pages/scan.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 搜索区域样式 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.search-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(79, 172, 254, 0.1), transparent);
  transition: left 0.8s ease-in-out;
}

.search-box:focus-within::before {
  left: 100%;
}

.search-icon {
  font-size: 32rpx;
  color: #4facfe;
  margin-right: 20rpx;
  transition: transform 0.3s ease;
}

.search-box:focus-within .search-icon {
  transform: scale(1.1);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
  min-height: 40rpx;
}

.search-input::placeholder {
  color: #999;
}

.clear-icon {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(0, 0, 0, 0.05);
}

.clear-icon:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.9);
  color: #666;
}

.search-tips {
  margin-top: 16rpx;
  text-align: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.search-tips text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 状态栏样式 */
.status-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.status-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: scanning 2s infinite;
}

@keyframes scanning {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 设备列表容器 */
.device-list {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.list-header {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-count {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.filter-btn {
  background: rgba(79, 172, 254, 0.8);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.filter-btn:active {
  transform: scale(0.95);
  background: rgba(79, 172, 254, 1);
}

/* 设备项样式 */
.device-item {
  background: rgba(255, 255, 255, 0.9);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.device-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.device-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.device-item:active::before {
  transform: scaleY(1);
}

/* 已连接设备样式 */
.device-item.connected {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  transform: scale(1.02);
}

.device-item.connected::before {
  background: #fff;
  transform: scaleY(1);
}

.device-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.device-info {
  flex: 1;
  min-width: 0;
}

.device-item .name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.device-item.connected .name {
  color: white;
}

.device-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.device-item .signal,
.device-item .id {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.device-item.connected .signal,
.device-item.connected .id {
  color: rgba(255, 255, 255, 0.9);
}

.device-item .id {
  font-family: 'Courier New', monospace;
  word-break: break-all;
}

/* 连接按钮样式 */
.connect-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.connected-badge {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
  border: 2rpx solid #4CAF50;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(15rpx);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  margin-bottom: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  line-height: 1.6;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  text-align: left;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(79, 172, 254, 0.4);
}

.action-btn.primary:disabled {
  background: #ccc;
  box-shadow: none;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-btn.secondary:disabled {
  background: rgba(255, 255, 255, 0.5);
  color: #999;
}

.action-btn:active:not(:disabled) {
  transform: translateY(2rpx);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx;
  }

  .title {
    font-size: 40rpx;
  }

  .device-item .name {
    font-size: 32rpx;
  }

  .status-text {
    font-size: 28rpx;
  }
}
