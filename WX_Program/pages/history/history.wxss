/* 日期选择器样式 */
.date-scroll {
  white-space: nowrap;
  width: 100%;
  padding: 10px 0;
  background-color: #f7f7f7;
  border-bottom: 1px solid #eee;
}

.date-item {
  display: inline-block;
  padding: 5px 15px;
  margin: 0 5px;
  border-radius: 15px;
  font-size: 14px;
  color: #666;
  background-color: #fff;
  border: 1px solid #ddd;
}

.date-item.active {
  color: #1aad19;
  border-color: #1aad19;
  font-weight: bold;
}

/* 加载指示器样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
}

.loading-content image {
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}

.loading-content text {
  display: block;
  font-size: 14px;
  color: #666;
}

/* 文件列表样式 */
.file-list {
  margin: 10px;
  border: 1px solid #eee;
  border-radius: 5px;
}

.file-item {
  padding: 12px 15px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}

.file-name {
  white-space: nowrap;       /* 不换行 */
  overflow: hidden;          /* 超出部分隐藏 */
  text-overflow: ellipsis;   /* 显示省略号 */
  flex: 1;                  /* 占据剩余空间 */
}

/* 确保 chart 容器没有限制高度 */
.chart-container {
  width: 100%;
  height: 70vh; /* 或直接固定高度，如 height: 500px; */
  margin: 10px 0;
}

/* canvas 元素本身要撑满父容器 */
canvas {
  width: 100%;
  height: 100%;
  display: block; /* 避免默认的 inline 元素间隙 */
}