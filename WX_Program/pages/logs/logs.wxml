<!--logs.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="title">📋 系统日志</view>
    <view class="subtitle">查看应用运行日志和操作记录</view>
  </view>

  <!-- 日志统计 -->
  <view class="log-stats">
    <view class="stat-card">
      <view class="stat-icon">📊</view>
      <view class="stat-info">
        <view class="stat-number">{{logs.length}}</view>
        <view class="stat-label">总日志条数</view>
      </view>
    </view>
    <view class="stat-card">
      <view class="stat-icon">⏰</view>
      <view class="stat-info">
        <view class="stat-number">{{todayLogs || 0}}</view>
        <view class="stat-label">今日新增</view>
      </view>
    </view>
  </view>

  <!-- 日志列表 -->
  <view class="logs-section">
    <view class="section-header">
      <view class="section-title">📝 操作记录</view>
      <button class="clear-btn" bindtap="clearLogs" wx:if="{{logs.length}}">🗑️ 清空</button>
    </view>

    <scroll-view class="log-scroll" scroll-y type="list" wx:if="{{logs.length}}">
      <view wx:for="{{logs}}" wx:key="timeStamp" wx:for-item="log" class="log-item">
        <view class="log-index">{{index + 1}}</view>
        <view class="log-content">
          <view class="log-date">{{log.date}}</view>
          <view class="log-time">{{log.time || ''}}</view>
          <view class="log-type">{{log.type || '系统日志'}}</view>
        </view>
        <view class="log-status">✓</view>
      </view>
    </scroll-view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{!logs.length}}">
      <view class="empty-icon">📋</view>
      <view class="empty-title">暂无日志记录</view>
      <view class="empty-desc">开始使用应用后，操作记录将显示在这里</view>
    </view>
  </view>

  <!-- 底部操作 -->
  <view class="bottom-actions" wx:if="{{logs.length}}">
    <button class="action-btn export" bindtap="exportLogs">📤 导出日志</button>
    <button class="action-btn refresh" bindtap="refreshLogs">🔄 刷新</button>
