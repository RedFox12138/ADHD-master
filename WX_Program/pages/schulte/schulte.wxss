/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

/* 头部卡片 */
.header-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 难度选择器 */
.difficulty-selector {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.difficulty-options {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}

.difficulty-card {
  flex: 1;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.difficulty-card.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #fff;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.diff-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.diff-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.difficulty-card.selected .diff-name,
.difficulty-card.selected .diff-desc {
  color: white;
}

.diff-desc {
  font-size: 22rpx;
  color: #666;
}

/* 历史记录卡片 */
.history-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 180rpx;  /* 为底部固定按钮留出空间 */
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.history-filter {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.stats-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  flex: 1;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
}

/* 图表容器 */
.chart-container {
  margin-top: 30rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.chart-tip {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

.no-records {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 游戏区域 */
.game-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-status {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.status-item {
  text-align: center;
}

.status-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.status-value.highlight {
  color: #667eea;
  font-size: 48rpx;
}

/* 方格容器 */
.grid-container {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.grid-wrapper {
  display: grid;
  gap: 12rpx;
  width: 100%;
  aspect-ratio: 1;
}

.grid-cell {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.grid-cell:active {
  transform: scale(0.95);
}

.grid-cell.found {
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  animation: fadeOut 0.5s forwards;
}

@keyframes fadeOut {
  to {
    opacity: 0.3;
  }
}

.cell-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
}

.grid-cell.found .cell-number {
  color: white;
}

/* 游戏控制按钮 */
.game-controls {
  display: flex;
  gap: 20rpx;
}

.control-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.quit-btn {
  background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 开始按钮 - 扁平样式,固定底部 */
.start-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); /* 适配全面屏 */
  background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(26,35,126,0.95) 30%);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.start-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  border-radius: 20rpx;  /* 扁平圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s;
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.25);
}

.start-icon {
  font-size: 52rpx;
}

.start-text {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  letter-spacing: 2rpx;
}

/* 完成弹窗 */
.complete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.modal-time {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 20rpx;
}

.modal-message {
  margin-bottom: 30rpx;
}

.new-record {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff9800;
}

.modal-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
}
