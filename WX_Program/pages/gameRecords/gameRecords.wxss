/* pages/gameRecords/gameRecords.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="200" height="200" fill="url(%23dots)"/></svg>');
  pointer-events: none;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 内容区域 */
.content-section {
  position: relative;
  z-index: 1;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-card.trend-up {
  background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);
}

.stat-card.trend-down {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
}

.stat-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 图表区域 */
.chart-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.section-header {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.chart-container {
  margin: 30rpx 0;
}

.chart-canvas {
  width: 100%;
  height: 300rpx;
}

.chart-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
  background: rgba(26, 173, 25, 0.05);
  border-radius: 12rpx;
  margin-top: 20rpx;
}

/* 记录列表区域 */
.records-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.refresh-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.refresh-btn:active {
  transform: scale(0.95);
}

.records-scroll {
  max-height: 600rpx;
  margin-top: 20rpx;
}

.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-card:last-child {
  margin-bottom: 0;
}

.record-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.record-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.record-card:active::before {
  transform: scaleY(1);
}

.record-card.latest {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
}

.record-index {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  min-width: 100rpx;
}

.record-index text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.latest-badge {
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-top: 8rpx;
  font-weight: 600;
}

.record-info {
  flex: 1;
  min-width: 0;
}

.record-time {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.record-date {
  font-size: 24rpx;
  color: #666;
}

.record-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 16rpx;
  transition: all 0.3s ease;
}

.record-card:active .record-arrow {
  color: #4facfe;
  transform: translateX(4rpx);
}

/* 鼓励信息 */
.encouragement {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.encouragement-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.encouragement-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(15rpx);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.start-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(79, 172, 254, 0.4);
  display: inline-block;
}

.start-btn:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #4facfe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .title {
    font-size: 40rpx;
  }
}
