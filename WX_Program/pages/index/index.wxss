/* 基础容器样式 */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #1a237e 0%, #3f51b5 50%, #0d1440 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.05)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.03)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.04)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  pointer-events: none;
}

/* 头部状态卡片 */
.status-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.status-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #4facfe, #00f2fe, #4facfe);
  background-size: 200% 100%;
  animation: statusFlow 3s ease-in-out infinite;
}

@keyframes statusFlow {
  0%, 100% { background-position: 200% 0; }
  50% { background-position: -200% 0; }
}

.status {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.status:last-child {
  margin-bottom: 0;
}

.status::before {
  content: '📡';
  font-size: 40rpx;
}

.status-online {
  color: #4caf50;
}

.status-online::before {
  content: '🟢';
  font-size: 32rpx;
}

.status-offline {
  color: #f44336;
}

.status-offline::before {
  content: '🔴';
  font-size: 32rpx;
}

/* 图表容器美化 */
.chart-container {
  margin: 40rpx 0;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.chart-container::before {
  content: '📊 实时脑电波数据';
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

/* 参数显示美化 */
.parameter {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.parameter view {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #e8eaf6;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  font-weight: 500;
}

.parameter view:last-child {
  margin-bottom: 0;
}

.parameter view::before {
  content: '⚡';
  margin-right: 16rpx;
  font-size: 32rpx;
}

.parameter view:last-child::before {
  content: '📈';
}

/* 实验信息面板 */
.experiment-info {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
}

.experiment-info::before {
  content: '🧠 实验状态';
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.experiment-info view {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 2;
  margin: 16rpx 0;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid rgba(255, 255, 255, 0.3);
}

/* ========== 基线收集阶段 ========== */
.baseline-container {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.2), rgba(139, 195, 74, 0.1));
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin: 40rpx 0;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(76, 175, 80, 0.3);
  box-shadow: 0 12rpx 40rpx rgba(76, 175, 80, 0.2);
  text-align: center;
}

.baseline-title {
  font-size: 36rpx;
  color: white;
  font-weight: 700;
  margin-bottom: 40rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.progress-container {
  position: relative;
  margin: 30rpx 0;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #8bc34a);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

.baseline-time {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* ========== 保卫小镇游戏界面 ========== */
.game-container {
  width: 100%;
  height: 1200rpx;
  position: relative;
  overflow: hidden;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #2e7d32 0%, #66bb6a 50%, #1b5e20 100%);
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 40rpx;
  touch-action: none; /* 禁用默认触摸行为，防止页面滚动 */
}

/* 可拖动的游戏世界 */
.game-world {
  position: absolute;
  width: 750rpx;
  height: 1200rpx;
  top: 0;
  left: 0;
  transition: transform 0.1s ease-out;
}

/* 小镇 */
.town {
  position: absolute;
  z-index: 5;
  transform: translate(-50%, -50%);
}

.town-body {
  font-size: 80rpx;
  line-height: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.5));
}

/* 炮台 */
.turret {
  position: absolute;
  z-index: 4;
}

.turret-body {
  font-size: 50rpx;
  line-height: 50rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

/* 怪物 */
.monster {
  position: absolute;
  z-index: 3;
  transform: translate(-50%, -50%);
}

.monster-body {
  font-size: 50rpx;
  line-height: 50rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

.boss-monster .boss-body {
  font-size: 80rpx;
  line-height: 80rpx;
  animation: bossScale 1s ease-in-out infinite;
}

@keyframes bossScale {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* 子弹 */
.bullet {
  position: absolute;
  z-index: 6;
  transform: translate(-50%, -50%);
}

.bullet-body {
  font-size: 24rpx;
  line-height: 24rpx;
}

/* 爆炸效果 */
.explosion {
  position: absolute;
  z-index: 7;
  transform: translate(-50%, -50%);
  animation: explode 0.5s ease-out forwards;
}

.explosion-body {
  font-size: 40rpx;
  line-height: 40rpx;
}

@keyframes explode {
  0% { 
    opacity: 1; 
    transform: translate(-50%, -50%) scale(0.5);
  }
  100% { 
    opacity: 0; 
    transform: translate(-50%, -50%) scale(2);
  }
}

/* 血条通用样式 */
.health-bar {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 6rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.town-health {
  width: 100rpx;
  bottom: -35rpx;
  height: 16rpx;
}

.monster-health {
  width: 60rpx;
  bottom: -25rpx;
  height: 10rpx;
}

.health-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #81c784);
  transition: width 0.3s ease;
}

.monster-fill {
  background: linear-gradient(90deg, #f44336, #ef5350);
}

.health-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 18rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.boss-label {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(90deg, #ff0000, #ff4444);
  color: white;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 0, 0, 0.5);
  animation: bossLabelPulse 1s ease-in-out infinite;
}

@keyframes bossLabelPulse {
  0%, 100% { transform: translateX(-50%) scale(1); }
  50% { transform: translateX(-50%) scale(1.1); }
}

@keyframes monsterMove {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.05); }
}

/* 游戏状态面板 */
.game-stats {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  padding: 20rpx;
  z-index: 10;
  backdrop-filter: blur(10rpx);
}

.stat-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-item-full {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.stat-label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.stat-value {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.exp-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 16rpx;
}

.exp-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #8bc34a);
  transition: width 0.3s ease;
}

/* 游戏提示 */
.game-prompt {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  z-index: 15;
  animation: promptPulse 2s ease-in-out infinite;
}

.prompt-text {
  color: #4caf50;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  text-shadow: 0 0 10rpx #4caf50;
}

@keyframes promptPulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.05); }
}

/* 结束游戏按钮 */
.end-game-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(244, 67, 54, 0.9);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  z-index: 20;
  box-shadow: 0 4rpx 12rpx rgba(244, 67, 54, 0.4);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.end-game-btn:active {
  transform: scale(0.95);
  background: rgba(244, 67, 54, 1);
}

/* 升级选择界面 */
.upgrade-choice-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 25;
  backdrop-filter: blur(5rpx);
}

.upgrade-choice-panel {
  background: linear-gradient(135deg, rgba(26, 35, 126, 0.95), rgba(63, 81, 181, 0.9));
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  max-width: 600rpx;
  width: 85%;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.upgrade-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  text-align: center;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.upgrade-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 40rpx;
}

.upgrade-options {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}

.upgrade-btn {
  flex: 1;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.upgrade-btn::after {
  border: none;
}

.upgrade-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.15));
}

.speed-btn {
  border-color: rgba(76, 175, 254, 0.5);
}

.damage-btn {
  border-color: rgba(255, 68, 68, 0.5);
}

.upgrade-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upgrade-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.upgrade-effect {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* ========== 状态指示器改造 ========== */
.game-stats {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
  display: flex;
  background: rgba(0, 0, 0, 0.7);
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.stat-item {
  display: flex;
  align-items: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 32rpx;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-item::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4facfe;
  margin-right: 12rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

/* 控制面板样式 */
.control-panel {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  border-radius: 24rpx;
  padding: 40rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

/* 输入区域样式 */
.input-section {
  margin-bottom: 30rpx;
}

.data-input {
  width: 100%;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.data-input:focus {
  border-color: #4facfe;
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.3);
}

/* 主要操作按钮区域 */
.main-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 控制按钮通用样式 */
.control-btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.control-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.control-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.control-btn:active {
  transform: translateY(2rpx);
}

/* 主要按钮样式 */
.control-btn.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.4);
}

.control-btn.primary:active {
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.6);
}

/* 成功按钮样式 */
.control-btn.success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(86, 171, 47, 0.4);
}

.control-btn.success:active {
  box-shadow: 0 4rpx 12rpx rgba(86, 171, 47, 0.6);
}

/* 危险按钮样式 */
.control-btn.danger {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 65, 108, 0.4);
}

.control-btn.danger:active {
  box-shadow: 0 4rpx 12rpx rgba(255, 65, 108, 0.6);
}

/* 次要按钮样式 */
.control-btn.secondary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.control-btn.secondary:active {
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.6);
}

/* 成功按钮样式 */
.control-btn.success {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  color: #333;
  box-shadow: 0 8rpx 24rpx rgba(132, 250, 176, 0.4);
}

.control-btn.success:active {
  box-shadow: 0 4rpx 12rpx rgba(132, 250, 176, 0.6);
}

/* 发送按钮样式 */
.control-btn.send-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  margin-bottom: 20rpx;
}

.control-btn.send-btn:active {
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.6);
}

/* 禁用按钮样式 */
.control-btn[disabled] {
  background: linear-gradient(135deg, #9e9e9e 0%, #757575 100%);
  color: rgba(255, 255, 255, 0.6);
  box-shadow: none;
  cursor: not-allowed;
  opacity: 0.6;
}

.control-btn[disabled]:active {
  transform: none;
  box-shadow: none;
}

/* 重启按钮样式优化 */
.restart-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.4);
  transition: all 0.3s ease;
}

.restart-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.6);
}

/* 游戏结束界面 */
.game-over {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
  backdrop-filter: blur(10rpx);
}

.game-over-content {
  background: linear-gradient(135deg, rgba(26, 35, 126, 0.95), rgba(63, 81, 181, 0.9));
  border-radius: 24rpx;
  padding: 60rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  max-width: 600rpx;
  width: 90%;
}

.game-over-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 30rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
}

.game-over-stats {
  margin-bottom: 40rpx;
}

.game-over-stats view {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  margin: 16rpx 0;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
}

