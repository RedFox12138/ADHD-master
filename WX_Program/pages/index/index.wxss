  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.stat-item {
  display: flex;
  align-items: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 32rpx;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-item::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4facfe;
  margin-right: 12rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

