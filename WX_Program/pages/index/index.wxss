.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.status, .parameter, .experiment-info {
  margin-bottom: 15px;
  font-size: 16px;
}

.canvas {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
}

.input {
  width: 80%;
  margin-bottom: 15px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.btn {
  width: 80%;
  margin-bottom: 15px;
  background-color: #1aad19;
  color: white;
}

.game-area {
  margin: 20px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.house {
  transition: all 0.3s ease;
}

.roof {
  width: 0;
  height: 0;
  transition: all 0.3s ease;
}