@media (max-width: 375px) {
  .container {
    padding: 30rpx;
  }

  .game-container {
    height: 600rpx;
  }

  .status-card,
  .parameter,
  .experiment-info {
    padding: 30rpx;
  }

  .control-btn {
    padding: 24rpx;
    font-size: 28rpx;
  }

  .control-panel {
    padding: 30rpx;
  }

  .data-input {
    padding: 20rpx 24rpx;
    font-size: 26rpx;
  }

  .main-actions {
    gap: 16rpx;
  }
}