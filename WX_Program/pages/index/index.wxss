/* 基础容器样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(to bottom, #1a237e, #0d1440);
  min-height: 100vh;
}
.chart-container {
  margin: 15px 0;
  padding: 10px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}
.status {
  font-size: 28rpx;
  color: #bdbdbd;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 8rpx;
}

.parameter {
  font-size: 32rpx;
  color: #e8eaf6;
  margin-bottom: 30rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 实验信息面板 */
.experiment-info {
  background: rgba(255,255,255,0.15);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.experiment-info view {
  font-size: 28rpx;
  color: #e0e0e0;
  line-height: 1.8;
  margin: 10rpx 0;
}

/* ========== 游戏主容器改造 ========== */
.game-container {
  width: 100%;
  height: 800rpx;
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
  background: linear-gradient(45deg, 
    rgba(13, 27, 42, 0.8) 0%,
    rgba(27, 38, 59, 0.9) 100%
  );
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.3);
}

/* 场景背景图样式 */
.scene-background {
  position: absolute;
  width: 100%;
  height: 100%;
  transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

/* ========== 小鸟元素改造 ========== */
.bird {
  position: absolute;
  left: 50%;
  width: 80rpx;
  height: 60rpx;
  transform: translateX(-50%);
  z-index: 10;
  transition: top 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.bird-body {
  position: absolute;
  width: 60rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #FF9800 0%, #FF5722 100%);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.bird-wing {
  position: absolute;
  top: -8rpx;
  right: -10rpx;
  width: 30rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #FFC107 0%, #FF9800 100%);
  border-radius: 50%;
  transform: rotate(30deg);
  animation: wing-flap 0.5s infinite alternate;
}

.bird-beak {
  position: absolute;
  top: 12rpx;
  left: -8rpx;
  width: 12rpx;
  height: 6rpx;
  background: #FFD600;
  clip-path: polygon(0 50%, 100% 0, 100% 100%);
}

@keyframes wing-flap {
  from { transform: rotate(20deg); }
  to { transform: rotate(40deg); }
}

/* ========== 状态指示器改造 ========== */
.game-stats {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
  display: flex;
  background: rgba(0,0,0,0.5);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #b3e5fc;
}

/* 纯CSS图标 */
.icon-time {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #4CAF50;
  border-radius: 50%;
  position: relative;
  margin-right: 10rpx;
}
.icon-time::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8rpx;
  height: 2rpx;
  background: #4CAF50;
  transform-origin: left center;
  transform: rotate(-45deg);
}

.icon-attention {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 20rpx solid #2196F3;
  margin-right: 10rpx;
}

.icon-scene {
  width: 24rpx;
  height: 24rpx;
  background: #9C27B0;
  border-radius: 4rpx;
  margin-right: 10rpx;
  position: relative;
}
.icon-scene::after {
  content: "Lv";
  position: absolute;
  color: white;
  font-size: 12rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* ========== 场景提示 ========== */
.scene-notice {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.7);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  z-index: 20;
  animation: fadeOut 1.5s 1s forwards;
  opacity: 0;
}

@keyframes fadeOut {
  0% { opacity: 0; transform: translateX(-50%) translateY(-20rpx); }
  20% { opacity: 1; transform: translateX(-50%) translateY(0); }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

/* ========== 游戏结束面板 ========== */
.game-over {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0,0,0,0.8);
  padding: 40rpx;
  border-radius: 24rpx;
  color: white;
  text-align: center;
  z-index: 200;
  width: 70%;
  backdrop-filter: blur(20rpx);
}

.game-over-title {
  font-size: 40rpx;
  color: #FF9800;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.game-over-level {
  font-size: 32rpx;
  color: #b3e5fc;
  margin-bottom: 30rpx;
}

.restart-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(45deg, #1a237e, #4a148c);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* ========== 垂直轨道指示线 ========== */
.track-line {
  position: absolute;
  width: 4rpx;
  height: 100%;
  left: 50%;
  background: linear-gradient(to bottom, 
    transparent 0%, 
    rgba(255,255,255,0.3) 50%, 
    transparent 100%);
  transform: translateX(-50%);
  z-index: 5;
}

/* ========== 危险状态指示 ========== */
.danger {
  color: #ff4d4f !important;
  animation: pulse 0.8s infinite alternate;
}

@keyframes pulse {
  from { opacity: 1; text-shadow: 0 0 10rpx #ff4d4f; }
  to { opacity: 0.7; text-shadow: 0 0 20rpx #ff4d4f; }
}

/* 控制区域 */
.control-area {
  margin-top: 60rpx;
  padding: 20rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 16rpx;
}

.input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #3949ab;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
  background: rgba(255,255,255,0.9);
  font-size: 32rpx;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(45deg, #1a237e, #4a148c);
  color: #e8eaf6;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 画布样式 */
.canvas {
  width: 100%;
  height: 400rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.restart-btn {
  margin-top: 40rpx;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(45deg, #1a237e, #4a148c);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 小鸟容器 - 确保相对定位 */
.bird {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 60px;
  z-index: 50;
}

/* 数学题气泡 */
.math-bubble {
  position: absolute;
  top: -50px; /* 显示在小鸟上方 */
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  z-index: 60; /* 高于小鸟 */
}

/* 数学题样式 */
.math-problem {
  background-color: rgba(255, 255, 255, 0.95);
  padding: 8px 12px;
  border-radius: 20px;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  white-space: nowrap;
  
  /* 气泡小箭头 */
  position: relative;
}
.math-problem:after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 10px 8px 0;
  border-style: solid;
  border-color: rgba(255, 255, 255, 0.95) transparent transparent;
}
