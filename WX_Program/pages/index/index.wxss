  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.control-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.control-btn:active {
  transform: translateY(2rpx);
}

