/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.status {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.parameter {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.experiment-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.experiment-info view {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.canvas {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
}

/* 游戏容器 */
.game-container {
  width: 100%;
  height: 600rpx;
  position: relative;
  overflow: hidden;
  border-radius: 16rpx;
  background-color: #000;
}

.game-stats {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  color: #fff;
  z-index: 100;
  font-size: 28rpx;
}

.game-message {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffeb3b;
  font-size: 36rpx;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}

.game-over {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ff5722;
  font-size: 40rpx;
  font-weight: bold;
}

.game-area {
  width: 100%;
  height: 100%;
  position: relative;
}

.stars {
  position: absolute;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 50%, 
    rgba(255,255,255,0.8) 1%, 
    transparent 2%
  );
  background-size: 200rpx 200rpx;
}

/* 陨石样式 */
.meteor {
  position: absolute;
  border-radius: 50%;
  transition: all 0.3s linear;
}

/* 爆炸效果 */
.explosion {
  position: absolute;
  border-radius: 50%;
  background: radial-gradient(circle, 
    rgba(255,87,34,0.8) 20%, 
    rgba(255,87,34,0) 100%
  );
  transition: all 0.3s ease-out;
}

/* 太空飞船 */
.spaceship {
  position: absolute;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.spaceship-wing {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 40rpx solid;
}

/* 控制区域 */
.control-area {
  margin-top: 40rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 历史记录按钮样式 */
.history-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255,255,255,0.9);
  padding: 20rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
  z-index: 999;
}

.history-btn image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.history-btn text {
  font-size: 24rpx;
  color: #333;
}